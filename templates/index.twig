    <script>
        $('.socks_items').click(function(item) {
            var id = $(this).attr('data-id');

            $('#socks_type').val(id);

            // Show "Please wait" Dialog

            $('#pleaseWaitPopup').modal();


            // After few seconds close the Please Wait popup and show "Enter Your Email" dialog
            var secondsToWait   = 2;

            var afterTimeoutFn  = function() {
                $('#pleaseWaitPopup').modal('hide');
            };

            $('#pleaseWaitPopup').on('hidden.bs.modal', function (e) {
                $("#enterEmailPopup").modal();
            });

            window.setTimeout(afterTimeoutFn, secondsToWait * 1000);
        });



        $('#signup-form').on('submit', function() {
            hideFormError();

            var email   = $('#email').val();

            if (email.length === 0) {
                showFormError();

                return false;
            }

            var data = {};

            // Hide all alert DIVs
            $('.signup-alert').hide(100);

            $('#signup-form input').each(function(index, obj) {
                var key = $(this).attr('name');
                var val = $(this).val();

                data[key]   = val;
            });

            $.post(
                    '{{ url('signup') }}',
                    data,
                    onSignupSuccess
            ).fail(onSignupFailure);
        });

        hideAllSignupAlerts = function() {
            $('.signup-alert').hide();
        };

        hideFormError   = function() {
            hideAllSignupAlerts();

            $('#signup-form').removeClass('has-error');
        };

        showFormError   = function() {
            hideAllSignupAlerts();

            $('#signup-error-email').show(100);
            $('#signup-form').addClass('has-error');
        };

        onSignupSuccess = function() {
            hideAllSignupAlerts();

            $('#success-part-1').hide(100);

            $('#signup-success').show(100);

            $('.pre-submit-btn').hide();
            $('.post-submit-btn').show();
        };

        onSignupFailure = function() {
            hideAllSignupAlerts();

            $('#signup-error').show(100);
        };

        $('#enterEmailPopup').on('hidden.bs.modal', function() {
            // Restore Signup Pop-Up to original state

            hideAllSignupAlerts();

            $('#success-part-1').show();
            $('#signup-success').hide();
            $('.pre-submit-btn').show();
            $('.post-submit-btn').hide();

        });

    </script>
